---
import { Image } from 'astro:assets'
import { profile, NAV_LINKS, template } from '@/settings'
import SocialIcons from './SocialIcons.astro'
import ProfilePictures from '@/assets/profile_pictures.jpg'

const { fullName, title } = profile
---
<aside
	class='px-4 pt-4 h-full w-[20rem] bg-base-200 text-base-content flex flex-col'
>
	<div class='flex flex-col justify-between h-full'>
		<div class='flex-shrink-0'>
			<div class='flex justify-center items-center flex-col'>
				<Image
					class='mask mask-circle size-44'
					src={ProfilePictures}
					alt={`Profile picture of ${fullName}`}
				/>
				<div class="text-center mt-6 hidden lg:block">
					<h1 class="text-xl font-bold mb-1">{fullName}</h1>
					<p class="text-sm text-base-content/70 leading-tight px-2">{title}</p>
				</div>
			</div>
			<div class='mx-4 mt-16'>
				<ul class='space-y-4 menu grow shrink menu-md overflow-y-auto'>
					{NAV_LINKS.map((link) => (
						<li>
							<a href={`${template.base}${link.href}`} class='text-lg'>{link.title}</a>
						</li>
					))}
				</ul>
			</div>
		</div>
		<div class='mx-4 mb-8 mt-auto flex-shrink-0'>
			<SocialIcons/>
		</div>
	</div>
</aside>
