---
import { ClientRouter } from 'astro:transitions';

import BetterIcon from '../components/ui/BetterIcon.astro'
import DarkLightController from '../components/ui/DarkLightController.astro'
import ThemeSelector from '../components/ui/ThemeSelector.astro'
import Navbar from '../components/ui/Navbar.astro'
import Head from '../components/Head.astro'

import { seo, profile, template } from '../settings'
import Footer from '../components/ui/Footer.astro'

type Props = {
	title?: string
	description?: string
	image?: string
}

const {
	title = seo.default_title,
	description = seo.default_description,
	image = seo.default_image,
} = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		{template.transitions && <ClientRouter /> }

		<Head title={title} description={description} image={image} />
		
		<!-- Google Fonts: Inter for professional sans-serif typography -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

	</head>
	<body>
		<div class={`bg-base-100 drawer lg:drawer-open ${template.menu_left ? 'drawer-end' : ''}`}>
			<input id='my-drawer' type='checkbox' class='drawer-toggle' />
			<!-- Drawer content -->
            <div class='drawer-content bg-base-100'>
				<div class='bg-base-100 z-50 text-base-content shadow-sm'>
					<nav class='navbar'>
						<div class='navbar-start'>
							{template.menu_left &&
								<DarkLightController/>
								/* <ThemeSelector transition:persist /> */
							}
							<label for='my-drawer' class='btn btn-square btn-ghost lg:hidden'>
								<BetterIcon>
									<svg
										xmlns='http://www.w3.org/2000/svg'
										fill='none'
										viewBox='0 0 24 24'
										stroke-width='1.5'
										class='size-6 stroke-current'
									>
										<path
											stroke-linecap='round'
											stroke-linejoin='round'
											d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
									</svg>
								</BetterIcon>
							</label>
						</div>
						<div class='navbar-center lg:hidden text-lg font-semibold'>
							{profile.fullName}
						</div>
						<div class='navbar-end'>
							{!template.menu_left &&
								<DarkLightController/>
								/* <ThemeSelector transition:persist /> */
							}
						</div>
					</nav>
				</div>
                <main class='p-8 pt-10 lg:pt-16 lg:max-w-5xl max-w-full mx-auto min-h-screen flex flex-col justify-between'>
					<!-- Page content -->
					<slot />
				<Footer />
				</main>
			</div>
			<!-- Drawer side -->
			<div class='drawer-side z-40'>
				<label for='my-drawer' aria-label='close sidebar' class='drawer-overlay'
				></label>
				<Navbar />
			</div>
		</div>
	</body>
</html>

<style is:global>
	/* Professional Typography and Accessibility */
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	/* Improve link accessibility with underline on hover */
	a:not(.btn):not(.link-hover) {
		transition: color 0.2s ease-in-out;
	}
	
	a:not(.btn):hover {
		text-decoration-thickness: 2px;
	}

	/* Enhanced button hover states for better UX */
	.btn {
		transition: all 0.2s ease-in-out;
		font-weight: 500;
	}
	
	.btn-primary:hover {
		transform: translateY(-1px);
		box-shadow: 0 4px 12px rgba(31, 77, 122, 0.3);
	}
	
	.btn-accent:hover {
		transform: translateY(-1px);
		box-shadow: 0 4px 12px rgba(217, 72, 15, 0.3);
	}

	/* Card hover effects for professional feel */
	.card {
		transition: all 0.3s ease-in-out;
	}
	
	.card:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
	}

	/* Better focus states for accessibility */
	*:focus-visible {
		outline: 2px solid #1F4D7A;
		outline-offset: 2px;
	}

	/* Improved prose typography */
	.prose {
		max-width: 75ch;
		line-height: 1.7;
	}
	
	.prose h1, .prose h2, .prose h3 {
		font-weight: 600;
		letter-spacing: -0.025em;
	}
	
	.prose p {
		margin-bottom: 1.25em;
	}

	/* Smooth scrolling for anchor links */
	html {
		scroll-behavior: smooth;
	}

	/* Better spacing for sections */
	section {
		scroll-margin-top: 2rem;
	}

	/* Enhanced badge styling */
	.badge {
		font-weight: 500;
		letter-spacing: 0.025em;
	}

	/* Stats styling for research impact */
	.stats {
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}
	
	.stat-value {
		font-weight: 700;
	}
	
	.stat-title {
		font-weight: 500;
		opacity: 0.7;
	}
</style>
