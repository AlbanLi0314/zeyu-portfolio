---
import Layout from '../layouts/Layout.astro'

// TODO: Move these to a data file or CMS
const skills = {
	'Materials Characterization': [
		'SEM', 'DLS', 'EDS', 'UV-Vis Spectroscopy',
		'Fluorometry', 'Rheometry', 'Electrophoresis',
		'Tensile Testing', 'Contact-Angle Measurement'
	],
	'Fabrication & Processing': [
		'Electrospray', 'DIW 3D Printing', 'SLA/FDM Printing',
		'Spin Coating', 'Mold Casting', 'Solvent Precipitation',
		'Photolithography', 'Two-Photon Lithography', 'Nanopatterning'
	],
	'Molecular & Bioengineering': [
		'PCR', 'qPCR', 'IVT', 'PAGE/Agarose Electrophoresis',
		'DNA/RNA Extraction & Purification', 'Chromatography-Column Design',
		'Enzyme Recycling', 'LSPR Binding Assays', 'Bio-Cleanroom Protocols'
	],
	'Programming & Computational': [
		'Python', 'Java', 'TensorFlow', 'PyTorch',
		'Pandas', 'NumPy', 'Seaborn', 'Data Analysis & Visualization'
	],
	'Design & Visualization': [
		'CAD', 'SketchUp', 'Autodesk 3ds Max',
		'Adobe Illustrator', 'Photoshop', 'InDesign',
		'Bootstrap Studio', 'Scientific Figure Production',
		'Video & Audio Editing'
	],
	'Languages': [
		'English (Fluent)', 'Mandarin (Native)', 'Cantonese (Proficient)'
	]
}
---

<Layout title="Skills - Zeyu Li">
	<div class='max-w-4xl mx-auto'>
		<h1 class='text-4xl font-bold mb-8'>Skills & Technologies</h1>
		
		<p class='text-lg text-base-content/70 mb-12'>
			A comprehensive overview of my technical skills, programming languages, and tools I work with.
		</p>

		<div class='space-y-12'>
			{Object.entries(skills).map(([category, items]) => (
				<section>
					<h2 class='text-2xl font-bold mb-6'>{category}</h2>
					<div class='flex flex-wrap gap-3'>
						{items.map((skill) => (
							<span class='badge badge-lg badge-outline hover:badge-primary transition-colors cursor-default'>
								{skill}
							</span>
						))}
					</div>
				</section>
			))}
		</div>

		<!-- Additional Skills Grid -->
		<section class='mt-16 pt-12 border-t'>
			<h2 class='text-3xl font-bold mb-8'>Proficiency Levels</h2>
			<div class='grid md:grid-cols-2 gap-6'>
				<div class='card bg-base-200'>
					<div class='card-body'>
						<h3 class='card-title'>Advanced / Expert</h3>
						<ul class='list-disc list-inside space-y-2 text-sm'>
							<li>DNA/RNA Extraction & Purification</li>
							<li>PCR & qPCR</li>
							<li>SEM Imaging & EDS Analysis</li>
							<li>3D Printing (DIW, SLA, FDM)</li>
							<li>Nanoparticle Fabrication</li>
							<li>Materials Characterization</li>
						</ul>
					</div>
				</div>

				<div class='card bg-base-200'>
					<div class='card-body'>
						<h3 class='card-title'>Intermediate / Proficient</h3>
						<ul class='list-disc list-inside space-y-2 text-sm'>
							<li>Python Programming & Data Analysis</li>
							<li>Machine Learning (TensorFlow, PyTorch)</li>
							<li>Rheometry & Tensile Testing</li>
							<li>Photolithography & Nanopatterning</li>
							<li>CAD & 3D Design Software</li>
							<li>Scientific Figure Production</li>
						</ul>
					</div>
				</div>

				<div class='card bg-base-200'>
					<div class='card-body'>
						<h3 class='card-title'>Working Knowledge</h3>
						<ul class='list-disc list-inside space-y-2 text-sm'>
							<li>Two-Photon Lithography</li>
							<li>Java Programming</li>
							<li>LSPR-based Binding Assays</li>
							<li>Video & Audio Editing</li>
							<li>Bootstrap Studio Web Design</li>
						</ul>
					</div>
				</div>

				<div class='card bg-base-200'>
					<div class='card-body'>
						<h3 class='card-title'>Education & Training</h3>
						<ul class='list-disc list-inside space-y-2 text-sm'>
							<li>Ph.D. Candidate - Cornell University</li>
							<li>B.S. Chemistry - Hong Kong Baptist University</li>
							<li>Computer Science Minor</li>
							<li>Bio-cleanroom Certified</li>
							<li>Laboratory Safety Training</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.badge:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
	}
</style>
