---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact - Zeyu Li"
  description="Get in touch with Zeyu Li"
>
  <h1>Contact</h1>
  <p class="page-intro">
    I'm always interested in discussing research collaborations, potential opportunities, 
    and connections in materials science and biotechnology.
  </p>

  <div class="contact-content">
    <section class="contact-info">
      <h2>Get in Touch</h2>
      <div class="info-item">
        <h3>Email</h3>
        <p><a href="mailto:zeyu.li@university.edu">zeyu.li@university.edu</a></p>
      </div>
      
      <div class="info-item">
        <h3>Office</h3>
        <p>
          Department of Materials Science<br>
          University Building, Room 123<br>
          University Name<br>
          City, State 12345
        </p>
      </div>

      <div class="info-item">
        <h3>Connect Online</h3>
        <ul class="contact-links">
          <li>
            <a 
              href="https://www.linkedin.com/in/yourprofile" 
              target="_blank" 
              rel="noopener noreferrer"
            >
              LinkedIn
            </a>
          </li>
          <li>
            <a 
              href="https://scholar.google.com/citations?user=yourprofile" 
              target="_blank" 
              rel="noopener noreferrer"
            >
              Google Scholar
            </a>
          </li>
          <li>
            <a 
              href="https://orcid.org/0000-0000-0000-0000" 
              target="_blank" 
              rel="noopener noreferrer"
            >
              ORCID
            </a>
          </li>
        </ul>
      </div>
    </section>

    <section class="contact-form-section">
      <h2>Send a Message</h2>
      <form class="contact-form" action="#" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            aria-required="true"
          />
        </div>
        
        <div class="form-group">
          <label for="email">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            aria-required="true"
          />
        </div>
        
        <div class="form-group">
          <label for="subject">Subject</label>
          <input 
            type="text" 
            id="subject" 
            name="subject" 
            required 
            aria-required="true"
          />
        </div>
        
        <div class="form-group">
          <label for="message">Message</label>
          <textarea 
            id="message" 
            name="message" 
            rows="6" 
            required 
            aria-required="true"
          ></textarea>
        </div>
        
        <button type="submit" class="submit-button">Send Message</button>
      </form>
    </section>
  </div>

  <style>
    h1 {
      margin-bottom: var(--spacing-md);
    }

    .page-intro {
      font-size: 1.125rem;
      color: var(--color-text-secondary);
      margin-bottom: var(--spacing-2xl);
      max-width: 800px;
    }

    .contact-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-2xl);
      margin-bottom: var(--spacing-2xl);
    }

    .contact-info h2,
    .contact-form-section h2 {
      margin-bottom: var(--spacing-lg);
      color: var(--color-text);
      font-size: 1.5rem;
    }

    .info-item {
      margin-bottom: var(--spacing-xl);
    }

    .info-item h3 {
      margin-bottom: var(--spacing-sm);
      color: var(--color-text);
      font-size: 1.125rem;
    }

    .info-item p {
      color: var(--color-text-secondary);
      margin-bottom: 0;
    }

    .info-item a {
      color: var(--color-link);
    }

    .contact-links {
      list-style: none;
      padding: 0;
    }

    .contact-links li {
      margin-bottom: var(--spacing-sm);
    }

    .contact-form {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-group label {
      margin-bottom: var(--spacing-xs);
      color: var(--color-text);
      font-weight: 500;
    }

    .form-group input,
    .form-group textarea {
      padding: var(--spacing-sm) var(--spacing-md);
      border: 1px solid var(--color-border);
      border-radius: var(--border-radius-sm);
      font-family: var(--font-sans);
      font-size: 1rem;
      color: var(--color-text);
      background: var(--color-background);
      transition: border-color 0.2s;
    }

    .form-group input:hover,
    .form-group textarea:hover {
      border-color: var(--color-primary);
    }

    .form-group textarea {
      resize: vertical;
    }

    .submit-button {
      padding: var(--spacing-md) var(--spacing-xl);
      background: var(--color-primary);
      color: white;
      border: none;
      border-radius: var(--border-radius-md);
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .submit-button:hover {
      background: var(--color-primary-hover);
    }

    @media (max-width: 768px) {
      .contact-content {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
