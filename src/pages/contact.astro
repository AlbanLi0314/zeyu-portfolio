---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Zeyu Li">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl md:text-4xl font-bold mb-8">Contact</h1>
    <p class="text-lg mb-8">
      Feel free to reach out for collaborations, questions, or just to say hi.
    </p>

    <div class="card bg-base-100 shadow-xl border border-base-300">
      <div class="card-body">
        <h2 class="card-title mb-4">Send a Message</h2>
        <!-- Form placeholder - to be integrated with Formspree/EmailJS -->
        <form class="space-y-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text">Name</span>
            </label>
            <input type="text" placeholder="Your Name" class="input input-bordered w-full" />
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Email</span>
            </label>
            <input type="email" placeholder="your.email@example.com" class="input input-bordered w-full" />
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Message</span>
            </label>
            <textarea class="textarea textarea-bordered h-32" placeholder="Your message..."></textarea>
          </div>
          <div class="form-control mt-6">
            <button class="btn btn-primary">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>
